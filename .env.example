# Demi Configuration - Copy to .env and fill in your secrets
# DO NOT COMMIT .env FILE - it contains sensitive tokens/passwords

# Discord Bot Integration
# Get token from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Optional: Specific Discord server ID (leave empty for all servers)
DISCORD_GUILD_ID=

# Optional: Specific Discord channel ID (leave empty for all channels)
DISCORD_CHANNEL_ID=

# Discord Ramble Channel (where Demi posts spontaneous thoughts)
# Get channel ID: Discord Settings > Advanced > Developer Mode ON > Right-click channel > Copy ID
DISCORD_RAMBLE_CHANNEL_ID=

# Database (already set in docker-compose.yml, but can override here)
# DATABASE_URL=postgresql://demi:demi_secure_password@postgres:5432/demi

# Ollama LLM Server
# OLLAMA_BASE_URL=http://ollama:11434

# TTS Backend Configuration
# Backend options: kokoro, melotts, coqui, luxtts, piper, pyttsx3, auto (default)
# Priority (auto): kokoro > melotts > coqui > luxtts > piper > pyttsx3
TTS_BACKEND=auto

# Device for TTS inference: auto, cpu, cuda, mps
TTS_DEVICE=auto

# Piper TTS Settings
PIPER_VOICES_DIR=/app/voices/piper
PIPER_VOICE=en_US-lessac-medium
PIPER_USE_GPU=true

# Kokoro TTS Settings (lightweight, fast, good quality)
# Voice options: af_heart, af_bella, af_nicole, af_sky, am_adam, am_michael, bf_emma, bm_george
KOKORO_VOICE=af_heart

# MeloTTS Settings (multilingual, emotion control)
MELO_LANGUAGE=EN
MELO_SPEAKER=EN-US

# Coqui XTTS-v2 Settings (best quality, voice cloning, ~2GB model)
COQUI_LANGUAGE=en
# Path to speaker reference WAV for voice cloning (optional)
COQUI_SPEAKER_WAV=

# LuxTTS Settings (48kHz, best voice cloning, requires reference audio)
# Path to reference audio file (required for LuxTTS)
LUXTTS_REFERENCE=
LUXTTS_NUM_STEPS=4

# Python Settings
PYTHONUNBUFFERED=1

# Optional: Telegram Bot Token
# TELEGRAM_TOKEN=your_telegram_bot_token_here

# Optional: LMStudio API endpoint
# LMSTUDIO_BASE_URL=http://localhost:8000

# Optional: Debug mode
# DEBUG=False
